{
  "compilerOptions": {
    "target": "es2020",
    // Basic
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    // Strict Type Checks
    "strict": true,
    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    // Advanced
    "jsxImportSource": "@emotion/react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
